<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/third_pager_one_listhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.android.mantingfanggsc.CircleImageView
            android:id="@+id/third_pager_user_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" ></com.android.mantingfanggsc.CircleImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/third_pager_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#595454" />

            <TextView
                android:id="@+id/third_pager_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grayText" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/third_pager_down_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/down_arrow" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/third_pager_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/third_pager_user_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/third_pager_sound"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/sound_back"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/third_pager_img_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sound_three" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/third_pager_single_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone" />

    <com.android.mantingfang.second.KindGridView
        android:id="@+id/third_pager_user_grdphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:listSelector="@null"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
    </com.android.mantingfang.second.KindGridView>
    
    <LinearLayout
        android:id="@+id/third_pager_linearPoem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/poetry_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/third_pager_tv_poemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/third_pager_tv_poem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:maxLines="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/a7m"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/third_pager_one_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/a7r" />

            <ImageView
                android:id="@+id/third_pager_one_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/a7m" />

            <ImageView
                android:id="@+id/third_pager_one_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/a7y" />
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:id="@+id/line_view_user_show"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_margin="5dp"
        android:visibility="gone" />

</LinearLayout>