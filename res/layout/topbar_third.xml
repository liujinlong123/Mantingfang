<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white" >
    
    <RadioGroup
        android:id="@+id/topbar_third_radgp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
        
        <RadioButton
            android:id="@+id/topbar_third_rbtnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/topbar_second_leftselector"
            android:button="@null"
            android:text="日赏"
            android:textColor="@drawable/topbar_second_text"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:checked="true" />
        
        <RadioButton
            android:id="@+id/topbar_third_rbtnR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/topbar_second_rightselector"
            android:button="@null"
            android:text="频道"
            android:textColor="@drawable/topbar_second_text"
            android:paddingRight="12dp"
            android:paddingLeft="5dp"/>
    </RadioGroup>
    
    
    <ImageView
        android:id="@+id/topbar_third_addInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/third_pager_add_info"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
