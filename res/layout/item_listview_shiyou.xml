<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/thirdlist_linear_headuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/thirdlist_img_headPhoto"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/thirdlist_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/thirdlist_img_headPhoto"
                android:text="username"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/thirdlist_img_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more_or_save" />
    </RelativeLayout>

    <TextView
        android:id="@+id/thirdlist_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="内容"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/thirdlist_linear_poem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/poetry_bg_u"
        android:orientation="vertical"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/thirdlist_tv_poemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/thirdlist_tv_poem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/thirdlist_tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="07:00"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/thirdlist_img_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/share_icon" />

            <ImageView
                android:id="@+id/thirdlist_img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/chat_icon" />

            <ImageView
                android:id="@+id/thirdlist_img_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/heart_off" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>